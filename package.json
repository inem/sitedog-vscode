{
  "name": "sitedog-preview",
  "displayName": "Sitedog Preview",
  "description": "Live preview for SiteDog project cards",
  "version": "0.3.2",
  "publisher": "nemytchenko",
  "repository": {
    "type": "git",
    "url": "https://github.com/sitedog/sitedog-vscode.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "sitedog",
    "preview",
    "yaml",
    "development",
    "cards"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sitedog.showPreview",
        "title": "Sitedog: Show Preview",
        "icon": "$(preview)"
      },
      {
        "command": "sitedog.refreshPreview",
        "title": "Sitedog: Refresh Preview"
      },
      {
        "command": "sitedog.convertRelativeDates",
        "title": "Sitedog: Convert Relative Dates",
        "icon": "$(clock)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "sitedog.showPreview",
          "when": "resourceFilename == 'sitedog.yml'",
          "group": "navigation"
        },
        {
          "command": "sitedog.convertRelativeDates",
          "when": "resourceFilename == 'sitedog.yml'",
          "group": "1_modification"
        }
      ],
      "editor/title": [
        {
          "command": "sitedog.showPreview",
          "when": "resourceFilename == 'sitedog.yml'",
          "group": "navigation"
        },
        {
          "command": "sitedog.convertRelativeDates",
          "when": "resourceFilename == 'sitedog.yml'",
          "group": "navigation"
        }
      ]
    }
  },
  "activationEvents": [
    "onLanguage:yaml"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
